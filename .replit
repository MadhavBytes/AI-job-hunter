# Replit Configuration for AI Job Hunter

# Run command
run = "python main.py"

# Language
language = "python3"

# Entrypoint
entrypoint = "main.py"

# Modules to import
modules = ["python-3.10"]

# Hidden files
hidden = [".env", ".git", "__pycache__", "*.pyc"]

# Package configuration
[nix]
channel = "stable-24_05"

# Python configuration
[env]
PYTHONUNBUFFERED = "1"
PYTHONIOENCODING = "utf-8"

# Package dependencies
[packager]
ignore-imports = ["flask_cors"]

# Workspace configuration
[workspace]
thumbsize = 250

# Dev server configuration
[dev]
preview = "http://localhost:8000"
